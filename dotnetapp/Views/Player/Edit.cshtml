@model dotnetapp.Models.Player;
<h4 style="text-align:center;">Edit</h4>
<div class="container col-4">
@using(Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m=>m.Id, new { @class="control-lable"})
            <div class="display-field">
            @Html.DisplayFor(m=>m.Id, new { @class= "form-control"})
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(m=>m.Age, new { @class="control-lable"})
            @Html.TextBoxFor(m=>m.Age, new { @class= "form-control"})
        </div>
        
        <div class="form-group">
            @Html.LabelFor(m=>m.Name, new { @class="control-lable"})
            @Html.TextBoxFor(m=>m.Name, new { @class= "form-control"})
        </div>
        
        <div class="form-group">
            @Html.LabelFor(m=>m.Category, new { @class="control-lable"})
            @Html.TextBoxFor(m=>m.Category, new { @class= "form-control"})
        </div>
        
        <div class="form-group">
            @Html.LabelFor(m=>m.BiddingAmount, new { @class="control-lable"})
            @Html.TextBoxFor(m=>m.BiddingAmount, new { @class= "form-control"})
        </div>
        
        <br>
    </div>
    <input type="submit" value="EditPlayer" calss="btn btn-primary">
    
}
</div>