@model IEnumerable<dotnetapp.Models.Team>
    <h2>Teams</h2>
    @Html.ActionLink("Add Teams","Create","Team")
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(m=>m.TeamId)</th>
            <th>@Html.DisplayNameFor(m=>m.Name)</th>
        </tr>
        <tbody>
            @foreach(var v in Model)
            {
                <tr>
                    <td>@v.TeamId</td>
                    <td>@v.Name</td>
                    <td>
                        @Html.ActionLink("Edit","Edit","Team",new{id=v.TeamId}, new{@class = "btn btn-primary" }) &nbsp;&nbsp;&nbsp;
                </tr>
            }
        </tbody>